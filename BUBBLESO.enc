#include<iostream.h>
#include<conio.h>
void bubble_sort(int a[],int )
{
int round,temp,i,flag;
for(round=1;round<=4;round++)
{
flag=0;
for(i=0;i<=4-round;i++)
{
if(a[i]>a[i+1])
{
flag=1;
temp=a[i];
a[i]=a[i+1];
a[i+1]=temp ;
}
if(flag==0)
{
cout<<"round="<<round<<endl;
return;
}
}
}
}
void main()
{
clrscr();
int a[5],i;
cout<<"Enter the values for bubble sorting\n";
for(i=1;i<=5;i++)
cin>>a[i];
bubble_sort(a,5);
cout<<"the values after sorting is\n";
for(i=1;i<=5;i++)
cout<<a[i]<<endl;
getch();
}
